rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read their own orders
    match /orders/{orderId} {
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.userId || 
        request.auth.token.email == "strrikaadmin#@gmail.com"
      );
      allow write: if request.auth != null;
    }
    
    // Allow admin to read all orders
    match /orders/{orderId} {
      allow read, write: if request.auth != null && request.auth.token.email == "strrikaadmin#@gmail.com";
    }
    
    // Allow everyone to read products
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "strrikaadmin#@gmail.com";
    }
    
    // Allow everyone to read categories (needed for dynamic categories)
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "strrikaadmin#@gmail.com";
    }
    
    // Allow authenticated users to create orders
    match /orders/{orderId} {
      allow create: if request.auth != null;
    }
    
    // Allow users to access order history subcollection
    match /orders/{orderId}/history/{historyId} {
      allow read, write: if request.auth != null && (
        request.auth.uid == get(/databases/$(database)/documents/orders/$(orderId)).data.userId ||
        request.auth.token.email == "strrikaadmin#@gmail.com"
      );
    }
  }
}